<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/hitungFragment">
    <fragment
        android:id="@+id/hitungFragment"
        android:name="org.d3if4078.limassegiempat.ui.hitung.HitungFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_hitung">
        <action
            android:id="@+id/action_hitungFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_hitungFragment_to_historiFragment"
            app:destination="@id/historiFragment" />
        <action
            android:id="@+id/action_hitungFragment_to_bangungRuangFragment"
            app:destination="@id/bangunRuangFragment" />
    </fragment>

    <fragment
        android:id="@+id/aboutFragment"
        android:name="org.d3if4078.limassegiempat.ui.AboutFragment"
        android:label="AboutFragment"/>
    <fragment
        android:id="@+id/historiFragment"
        android:name="org.d3if4078.limassegiempat.ui.histori.HistoriFragment"
        android:label="@string/histori"
        tools:layout="@layout/fragment_histori" />
    <fragment
        android:id="@+id/bangunRuangFragment"
        android:name="org.d3if4078.limassegiempat.ui.bangun_ruang.BangunRuangFragment"
        android:label="BangunRuangFragment"
        tools:layout="@layout/fragment_bangun_ruang"/>

</navigation>